[uwsgi]
uid             = {{ project_user }}
gid             = {{ project_user }}
chdir           = {{ project_path }}
wsgi-file       = {{ project_path }}/fix_the_news/core/wsgi.py
home            = {{ project_venv }}
master          = true
processes       = 10
socket          = {{ socket_directory }}/fn.sock
chmod-socket    = 664
vacuum          = true
plugins         = python3
env             = AWS_ACCESS_KEY_ID={{ AWS_ACCESS_KEY_ID }}
env             = AWS_SECRET_ACCESS_KEY={{ AWS_SECRET_ACCESS_KEY }}
env             = AWS_S3_REGION_NAME={{ AWS_S3_REGION_NAME }}
env             = AWS_MEDIA_BUCKET_NAME={{ AWS_MEDIA_BUCKET_NAME }}
env             = SECRET_KEY={{ SECRET_KEY }}
env             = DEBUG={{ DEBUG }}
env             = DJANGO_SETTINGS_MODULE={{ DJANGO_SETTINGS_MODULE }}
env             = DATABASE_NAME={{ DATABASE_NAME }}
env             = DATABASE_USER={{ DATABASE_USER }}
env             = DATABASE_PASSWORD={{ DATABASE_PASSWORD }}
env             = DATABASE_HOST={{ DATABASE_HOST }}
env             = DATABASE_PORT={{ DATABASE_PORT }}
env             = DJANGO_HOST={{ DJANGO_HOST }}
env             = DJANGO_SETTINGS_MODULE={{ DJANGO_SETTINGS_MODULE }}
env             = CELERY_BROKER_URL={{ CELERY_BROKER_URL }}
env             = WEB_APP_HOST={{ WEB_APP_HOST }}
env             = SENTRY_KEY={{ SENTRY_KEY }}
env             = SENTRY_ORGANISATION={{ SENTRY_ORGANISATION }}
env             = SENTRY_PROJECT={{ SENTRY_PROJECT }}
